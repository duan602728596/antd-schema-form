{
  "compilerOptions": {
    "alwaysStrict": true,
    "moduleResolution": "node",
    "locale": "zh-CN",
    "module": "commonjs",
    "target": "ES5",
    "newLine": "LF",
    "resolveJsonModule": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "declaration": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "DOM"
    ]
  }
}