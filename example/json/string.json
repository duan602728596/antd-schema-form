{
  "id": "$root/properties/string",
  "type": "object",
  "title": "字符串",
  "description": "渲染字符串类型的组件。",
  "properties": {
    "default": {
      "id": "$root/properties/string/properties/default",
      "type": "string",
      "title": "默认组件",
      "description": "默认组件"
    },
    "hasValue": {
      "id": "$root/properties/string/properties/hasValue",
      "type": "string",
      "title": "组件有默认值",
      "description": "组件有默认值",
      "$defaultValue": "默认值"
    },
    "readOnly": {
      "id": "$root/properties/string/properties/readOnly",
      "type": "string",
      "title": "组件只读",
      "description": "组件只读",
      "$readOnly": true,
      "$defaultValue": "只读"
    },
    "required": {
      "id": "$root/properties/string/properties/required",
      "type": "string",
      "title": "表单必填",
      "description": "表单必填",
      "$required": true
    },
    "objectRequired": {
      "id": "$root/properties/string/properties/objectRequired",
      "type": "string",
      "title": "另一种形式的表单必填",
      "description": "另一种形式的表单必填"
    },
    "enum": {
      "id": "$root/properties/string/properties/enum",
      "type": "string",
      "title": "枚举",
      "description": "枚举",
      "enum": [
        "apple",
        "orange"
      ],
      "$placeholder": "apple, orange"
    },
    "minLength": {
      "id": "$root/properties/string/properties/minLength",
      "type": "string",
      "title": "组件有最小长度",
      "description": "组件有最小长度",
      "minLength": 3,
      "$placeholder": "组件有最小长度：3"
    },
    "maxLength": {
      "id": "$root/properties/string/properties/maxLength",
      "type": "string",
      "title": "组件有最大长度",
      "description": "组件有最大长度",
      "maxLength": 5,
      "$placeholder": "组件有最大长度：5"
    },
    "length": {
      "id": "$root/properties/string/properties/length",
      "type": "string",
      "title": "组件有固定长度",
      "description": "组件有固定长度",
      "$length": 5,
      "$placeholder": "组件有固定长度：5"
    },
    "pattern": {
      "id": "$root/properties/string/properties/pattern",
      "type": "string",
      "title": "组件正则验证",
      "description": "组件正则验证",
      "pattern": "^[a-z]+$",
      "$patternOption": "ig",
      "$placeholder": "/^[a-z]+$/ig"
    },
    "textArea": {
      "id": "$root/properties/string/properties/textArea",
      "type": "string",
      "title": "文本域",
      "description": "文本域组件",
      "$componentType": "textArea"
    },
    "select": {
      "id": "$root/properties/string/properties/select",
      "type": "string",
      "title": "下拉框组件",
      "description": "下拉框组件",
      "$componentType": "select",
      "emum": [
        "值1",
        "值1"
      ],
      "enumNames": [
        "选项1",
        "选项2"
      ]
    },
    "radio": {
      "id": "$root/properties/string/properties/radio",
      "type": "string",
      "title": "单选框组件",
      "description": "单选框组件",
      "$componentType": "radio",
      "emum": [
        "值1",
        "值1"
      ],
      "enumNames": [
        "选项1",
        "选项2"
      ]
    },
    "date": {
      "id": "$root/properties/string/properties/date",
      "type": "string",
      "title": "日期组件",
      "description": "日期组件",
      "$componentType": "date",
      "$defaultValue": "2010-12-15 08:12:14"
    },
    "password": {
      "id": "$root/properties/string/properties/password",
      "type": "string",
      "title": "密码",
      "description": "密码",
      "$componentType": "password",
      "$placeholder": "请输入密码"
    },
    "custom": {
      "id": "$root/properties/string/properties/custom",
      "type": "string",
      "title": "自定义组件",
      "description": "自定义组件",
      "$componentType": "custom",
      "$placeholder": "自定义组件"
    },
    "oneOf": {
      "id": "$root/properties/string/properties/oneOf",
      "description": "oneOf",
      "oneOf": [
        {
          "title": "oneOf1",
          "type": "string",
          "$componentType": "date"
        },
        {
          "title": "oneOf2",
          "type": "string"
        },
        {
          "title": "oneOf3",
          "type": "string",
          "$required": true
        }
      ]
    }
  },
  "required": [
    "objectRequired"
  ],
  "dependencies": {
    "required": ["objectRequired"]
  }
}